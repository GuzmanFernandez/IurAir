<Page x:Class="IurAir.UI.HomePage.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:IurAir.UI.HomePage"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Background="WhiteSmoke"
      Title="HomePage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="6*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <Label Content="Iur to Air" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="0" FontSize="68" FontWeight="Black"/>
        
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1*"/>
                <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="5*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>

            <Label Content="SETUP" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32"/>
            <Label Content="TRANSLATE" Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="1" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="32"/>
            <Viewbox Grid.Row="1" Grid.Column="0" Margin="60,20">
                <Button x:Name="SetupBTN" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="WhiteSmoke" BorderThickness="0" Click="Setup">
                    <Image Source="{StaticResource Gear}" Stretch="Uniform"/>
                </Button>
            </Viewbox>

            <Viewbox Grid.Row="1" Grid.Column="1" Margin="60,20">
                <Button x:Name="TranslateBTN" HorizontalAlignment="Center" VerticalAlignment="Stretch" Background="WhiteSmoke" BorderThickness="0" Click="Translate">
                    <Image Source="{StaticResource Translate}" Stretch="Uniform"/>
                </Button>
            </Viewbox>
        </Grid>
    </Grid>
</Page>
