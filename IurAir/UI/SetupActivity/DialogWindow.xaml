<Window x:Class="IurAir.UI.SetupActivity.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IurAir.UI.SetupActivity"
        mc:Ignorable="d"
       Title="Password Dialog" Width="300" Height="250">
    <StackPanel Margin="10">
        <TextBlock Text="InsertPassword:" />
        <PasswordBox x:Name="passwordBox" PasswordChar="*" Width="200" Height="30" />
        <TextBlock Text="Agency Iata:" />
        <TextBox x:Name="textBox1" Width="200" Height="30" />
        <CheckBox x:Name="debugModeCheckBox" Content="Debug Mode" Margin="0,10,0,0" />
        <CheckBox x:Name="persistentDebugCheckBox" Content="Persist debug after application restart" Margin="0,10,0,0" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="okButton" Content="OK" Width="75" Margin="5" Click="OkButton_Click" />
            <Button x:Name="cancelButton" Content="Annulla" Width="75" Margin="5" Click="CancelButton_Click" />
        </StackPanel>
    </StackPanel>
</Window>
